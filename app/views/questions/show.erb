<article class="question-info stable-parent">
  <h1 class="question-title"><%= @question.title %></h1>
  <div id="question-description">
    <%= @question.description %>
  </div>
  <% if logged_in? %>
    <form class="vote-container" action="/questions/<%= @question.id %>/votes" type="POST">
      <%= erb :'/questions/_vote_buttons' %>
    </form>
  <% end %>
  <%= erb :'/partials/_post_footer', locals: {post: @question} %>
  <div id="question-answers-list" class="stable-parent">
    <% @question.answers.each do |answer| %>
      <% if answer == @question.best_answer %>
        <div class="best-answer"><%= erb :'answers/_show_answer', locals: { answer: answer } %></div>
      <% else %>
        <div class="reg-answer"><%= erb :'answers/_show_answer', locals: { answer: answer } %></div>
      <% end %>
    <% end %>
  </div>
</article>
<%= erb :'/answers/_new_form' %>
<div class="new-post-buttons">
  <button class="comment-button" value="/comments/new">Post Comment</button>
</div>
